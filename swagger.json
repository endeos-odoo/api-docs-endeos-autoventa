{
    "openapi": "3.0.2",
    "info": {
      "title": "ENDEOS - Autoventa API",
      "description": "Puntos de acceso REST personalizados",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "https://endeos-xcorbella-api-odoo17-test-15641564.dev.odoo.com",
        "variables": {},
        "description": "api odoo-17 test"
      }
    ],
    "paths": {
      "/api/v1/auth": {
        "post": {
          "summary": "Autenticación de usuario",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "user",
                    "password"
                  ],
                  "properties": {
                    "user": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string"
                    },
                    "db": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Autenticación válida",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "autenticado": {
                        "type": "boolean"
                      },
                      "api_key": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "4XX": {
              "description": "Autenticación inválida",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "errors": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }